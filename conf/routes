# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.HomeController.index

# An example controller showing how to write asynchronous code
GET     /message                    controllers.AsyncController.message

# User routing
+nocsrf
GET     /user                       controllers.UserController.returnHome()
GET     /user/find                  controllers.UserController.getUser(request: Request)
PUT     /user                       controllers.UserController.updateUser(request: Request)
POST    /user                       controllers.UserController.createUser(request: Request)
GET     /user/all                   controllers.UserController.listUsers()

# Trip routing
+nocsrf
POST    /trips                      controllers.HomeController.addTrip(request: Request)
GET     /trips                      controllers.HomeController.getRoutes()



# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
