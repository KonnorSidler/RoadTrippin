# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.HomeController.index
# An example controller showing how to use dependency injection
GET     /count                      controllers.CountController.count
# An example controller showing how to write asynchronous code
GET     /message                    controllers.AsyncController.message

# Person routing
+nocsrf
POST    /person                     controllers.HomeController.addPerson(request: Request)
GET     /persons                    controllers.HomeController.getPersons()

# tripInfo routing
+nocsrf
POST    /tripInfo                   controllers.HomeController.saveRouteInfo(request: Request)
GET     /trips                      controllers.HomeController.getRoutes()

POST    /saveTripRating             controllers.HomeController.saveTripRating(request: Request)
GET     /tripRating                 controllers.HomeController.getTripRating()


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)


+nocsrf
POST    /trip/save                  controllers.HomeController.testLink(request: Request)



+nocsrf
GET     /user                       controllers.UserController.returnHome()
GET     /user/find                  controllers.UserController.getUser(request: Request)
PUT     /user                       controllers.UserController.updateUser(request: Request)
POST    /user                       controllers.UserController.createUser(request: Request)
GET     /user/all                   controllers.UserController.listUsers()